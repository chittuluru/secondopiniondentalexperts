@model IEnumerable<SecondOpinion.Models.Service>
@{

    ViewBag.Title = "Services";
}

@section head{
            <link href="@Url.Content("~/Content/PricingTable.css")" rel="stylesheet" type="text/css" />
}

<br/>
<div class="container">
	<div class="row">
        @{
            int i = 0;
            foreach(var item in Model)
            {
                i++;
                if(i == 1)
                {
        	        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">	
			        <!-- PRICE ITEM -->
			        <div class="panel price panel-blue">
				        <div class="panel-heading arrow_box text-center">
				        <h3>@item.ServiceDescription</h3>
				        </div>
				        <div class="panel-body text-center">
					        <p class="lead" style="font-size:40px"><strong>@Session["CurrencySymbol"].ToString() @item.Price</strong></p>
				        </div>
				        <ul class="list-group list-group-flush text-center">
					        <li class="list-group-item"><i class="icon-ok text-success"></i> Full review of adjacent teeth and five questions pertaining to your treatment plan</li>
					        <li class="list-group-item"><i class="icon-ok text-success"></i> Detailed summary of suggested treatment and alternatives</li>
					        <li class="list-group-item"><i class="icon-ok text-success"></i> Analysis of your Dentist’s proposed treatment</li>
				        </ul>
				        <div class="panel-footer">
                            @using (Html.BeginForm("OrderService", "Paypal", FormMethod.Post, new { id = "1"}))
                            {
                                Html.AntiForgeryToken();
                                <input type="hidden" name="Service" value=@item.Id />
                                <input type="submit" class="btn btn-lg btn-block btn-primary" value="BUY NOW!" />
                            }
				        </div>
			        </div>
			        <!-- /PRICE ITEM -->
		        </div>
                }
	            
                if(i == 2)
                {
		            <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">
			            <!-- PRICE ITEM -->
			            <div class="panel price panel-blue">
				            <div class="panel-heading arrow_box text-center">
				            <h3>@item.ServiceDescription</h3>
				            </div>
				            <div class="panel-body text-center">
					            <p class="lead" style="font-size:40px"><strong>@Session["CurrencySymbol"].ToString() @item.Price</strong></p>
				            </div>
				            <ul class="list-group list-group-flush text-center">
					            <li class="list-group-item"><i class="icon-ok text-success"></i> Full analysis of your entire treatment plan, in addition to answering five questions pertaining your case</li>
					            <li class="list-group-item"><i class="icon-ok text-success"></i> Overview of alternate treatment suggestions, if applicable</li>
					            <li class="list-group-item"><i class="icon-ok text-success"></i> Review of fees<br/><br/></li>
				            </ul>
				            <div class="panel-footer">
					            @using (Html.BeginForm("OrderService", "Paypal", FormMethod.Post, new { id = "2"}))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="Service" value=@item.Id />
                                    <input type="submit" class="btn btn-lg btn-block btn-primary" value="BUY NOW!" />
                                }
				            </div>
			            </div>
			            <!-- /PRICE ITEM -->
		            </div>	
				}

                if(i == 3)
                {
            		<div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">
			<!-- PRICE ITEM -->
			<div class="panel price panel-blue">
				<div class="panel-heading arrow_box text-center">
				<h3>@item.ServiceDescription</h3>
				</div>
				<div class="panel-body text-center">
					<p class="lead" style="font-size:40px"><strong>@Session["CurrencySymbol"].ToString() @item.Price</strong></p>
				</div>
				<ul class="list-group list-group-flush text-center">
					<li class="list-group-item"><i class="icon-ok text-success"></i> For patients who have more questions after receiving their Second Opinion Dentists review or for patients who have not seen a dentist yet and simply have some dental questions they would like answered. You may submit up to five questions<br/><br/></li>
				</ul>
				<div class="panel-footer">
					@using (Html.BeginForm("OrderService", "Paypal", FormMethod.Post, new { id = "3"}))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Service" value=@item.Id />
                        <input type="submit" class="btn btn-lg btn-block btn-primary" value="BUY NOW!" />
                    }
				</div>
			</div>
			<!-- /PRICE ITEM -->
		</div>
                }
            }
        }

 		<div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">
			<!-- PRICE ITEM -->
			<div class="panel price panel-green ">
				<div class="panel-heading arrow_box text-center">
				<h3>Dental Tourism Packages</h3>
				</div>
				<div class="panel-body text-center">
					<p class="lead" style="font-size:40px"><strong>Offordable</strong></p>
				</div>
				<ul class="list-group list-group-flush text-center">
					<li class="list-group-item"><i class="icon-ok text-success"></i> Dental treatments in India at very offordable prices with out compromising on quality<br/><br/></li>
                    <li class="list-group-item"><i class="icon-ok text-success"></i> Treatments by Specialist Doctors<br/><br/></li>
                    <li class="list-group-item"><i class="icon-ok text-success"></i> End to end packages including tourism<br/></li>
				</ul>
				<div class="panel-footer">
					<a class="btn btn-lg btn-block btn-success" href="#">Contact Us!</a>
				</div>
			</div>
			<!-- /PRICE ITEM -->					
		</div>
	</div>
</div>
@Scripts.Render("~/bundles/jquery")